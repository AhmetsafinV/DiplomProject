<p id="notice"><%= notice %></p>

<h1 >Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Started date</th>
      <th>Finished date</th>
      <th>Started time</th>
      <th>Finished time</th>
      <th>Period</th>
      <th>Wday</th>
      <th>Room name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.started_date %></td>
        <td><%= course.finished_date %></td>
        <td><%= course.started_time %></td>
        <td><%= course.finished_time %></td>
        <td><%= course.period %></td>
        <td><%= course.wday %></td>
        <td><%= course.room_name %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

